<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.3"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd">


    <application>
        <locale-config>
            <default-locale>pl</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>bundles/messages</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>

    <navigation-rule>
        <from-view-id/>
        <navigation-case>
            <from-outcome>main</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>NewBabysitter</from-outcome>
            <to-view-id>/NewBabysitter.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>NewUser</from-outcome>
            <to-view-id>/NewUser.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>BabysitterList</from-outcome>
            <to-view-id>/BabysitterList.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>ClientList</from-outcome>
            <to-view-id>/ClientList.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>NewEmployment</from-outcome>
            <to-view-id>/NewEmployment.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>EmploymentList</from-outcome>
            <to-view-id>/EmploymentList.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>ModifyBabysitter</from-outcome>
            <to-view-id>/ModifyBabysitter.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>LoginPage</from-outcome>
            <to-view-id>/auth/LoginPage.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>LogoutPage</from-outcome>
            <to-view-id>/auth/LogoutPage.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/NewBabysitter.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>NewBabysitterConfirm</from-outcome>
            <to-view-id>/NewBabysitterConfirm.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/ModifyBabysitter.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>ModifyBabysitterConfirm</from-outcome>
            <to-view-id>/ModifyBabysitterConfirm.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/NewUser.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>NewUserConfirm</from-outcome>
            <to-view-id>/NewUserConfirm.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>ModifyUserConfirm</from-outcome>
            <to-view-id>/ModifyUserConfirm.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/NewEmployment.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>NewEmploymentConfirm</from-outcome>
            <to-view-id>/NewEmploymentConfirm.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/ModifyUserConfirm.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>ModifyUser</from-outcome>
            <to-view-id>/ModifyUser.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/ModifyUser.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>ModifyUserConfirm</from-outcome>
            <to-view-id>/ModifyUserConfirm.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/auth/LoginPage.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>ErrorPage</from-outcome>
            <to-view-id>/auth/ErrorPage.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>


</faces-config>
